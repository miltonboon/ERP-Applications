<mvc:View controllerName="artistmanagement.controller.ArtistDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="detailPage" title="Artist Detail" showNavButton="true" navButtonPress=".onCloseDetail">
        <VBox class="sapUiSmallMargin">
            <HBox justifyContent="SpaceBetween" alignItems="Center">
                <Label text="{= 'ID: ' + ${detail>/id}}"/>
                <HBox alignItems="Center" renderType="Bare" class="sapUiTinyMarginTop">
                    <Link text="Spotify" href="{path: 'detail>/spotifyUrl', formatter: '.formatSpotifyHref'}" target="_blank" class="sapUiTinyMarginEnd"/>
                    <Link text="Instagram" href="{path: 'detail>/instagramHandle', formatter: '.formatInstagramHref'}" target="_blank"/>
                </HBox>
            </HBox>
            <ObjectIdentifier title="{detail>/name}"/>
        </VBox>
    </Page>
</mvc:View>
