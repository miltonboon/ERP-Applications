<mvc:View controllerName="artistmanagement.controller.ArtistManagement"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core">
    <f:FlexibleColumnLayout id="fcl" layout="OneColumn">
        <f:beginColumnPages>
            <Page id="masterPage" title="Artists">
                <Table id="artistTable"
                    mode="SingleSelectMaster"
                    items="{
                        path: '/ArtistOverview',
                        parameters: { $select: 'ID,name,genre,country,popularityScore,spotifyUrl,instagramHandle' }
                    }"
                    selectionChange=".onSelectArtist">
                    <headerToolbar>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <SearchField width="17.5rem" placeholder="Search by name" search=".onSearch"/>
                            <Button type="Transparent" icon="sap-icon://sort" press=".onOpenSortPopover"/>
                            <Button type="Transparent" icon="sap-icon://filter" press=".onOpenFilterPopover"/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="Name"/>
                        </Column>
                        <Column>
                            <Text text="Genre"/>
                        </Column>
                        <Column>
                            <Text text="Country"/>
                        </Column>
                        <Column>
                            <Text text="Popularity"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <ObjectIdentifier title="{name}"/>
                                <Text text="{path: 'genre', formatter: '.formatGenre'}"/>
                                <Text text="{country}"/>
                                <ObjectNumber number="{ path: 'popularityScore', type: 'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 1, maxFractionDigits: 1 } }"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Page>
        </f:beginColumnPages>
        <f:midColumnPages>
            <mvc:XMLView viewName="artistmanagement.view.ArtistDetail" id="detailView"/>
        </f:midColumnPages>
    </f:FlexibleColumnLayout>
</mvc:View>
