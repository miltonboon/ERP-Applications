<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="New review" contentWidth="26rem">
        <VBox class="sapUiMediumMargin" renderType="Bare">
            <Text text="Performance"/>
            <Select selectedKey="{reviewForm>/performanceId}" items="{detail>/performances}" width="100%">
                <core:Item key="{detail>id}" text="{parts: [{path: 'detail>stageName'}, {path: 'detail>startAt'}, {path: 'detail>endAt'}], formatter: '.formatPerformanceLabel'}"/>
            </Select>
            <Text text="Date" class="sapUiSmallMarginTop"/>
            <DatePicker value="{reviewForm>/date}" valueFormat="yyyy-MM-dd" displayFormat="long" width="100%"/>
            <Text text="Customer name" class="sapUiSmallMarginTop"/>
            <Input value="{reviewForm>/customerName}" placeholder="Name of the customer" width="100%"/>
            <Text text="Rating" class="sapUiSmallMarginTop"/>
            <RatingIndicator value="{reviewForm>/rating}" maxValue="5" iconSize="1.5rem" class="sapUiSmallMarginBottom"/>
            <Text text="Comment (optional)"/>
            <TextArea value="{reviewForm>/comment}" rows="3" width="100%" growing="true" placeholder="Write a short comment..."/>
        </VBox>
        <endButton>
            <Button text="Cancel" press=".onCancelAddReview"/>
        </endButton>
        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveReview"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
